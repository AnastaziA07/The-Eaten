screen show_inventory():
    frame:
        xalign 0.95
        yalign 0.05
        padding 10
        background "#3338"
        has vbox
        text "üéí Inventory" size 22 color "#fff"
        for item in inventory:
            text "[item]" size 18 color "#fff"



